<LoginScreen>:
    name: 'loginscreen'
    md_bg_color: '#FCAA22'
    MDFloatLayout:
        Image:
            source: 'foto.png'
            size_hint: (0.7, 0.7)
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        MDLabel:
            text: 'Entrar'
            text_color: 0, 22, 62, 53
            font_size: dp(23)
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.2, 'center_y': 0.47}
        MDTextFieldRect:
            size_hint: 0.8, None
            height: dp(32)
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            hint_text: 'Email'
        MDTextFieldRect:
            size_hint: 0.8, None
            height: dp(32)
            password: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            hint_text: 'Senha'
        
        MDRaisedButton:
            text: 'Login'
            text_color: '#775D2D'
            md_bg_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint_x: .8
            elevation:0
            on_release: root.manager.current = 'começar'
    
<Receitas>:
    name: 'receitas'
    FloatLayout:
        MDTopAppBar:
            pos_hint: {'center_x': 0.5, 'center_y': 0.967}
            elevation: 0
            md_bg_color: '#FCAA22'
            MDLabel:
                text: 'MadBit'
                bold: True
                halign: 'center'
                font_size: dp(20)
                pos_hint: {'center_x': 0.5, 'center_y': 0.97}
                theme_text_color: 'Custom'
                text_color: 1, 1, 1 ,1
        MDCard:
            size_hint: (0.87, 0.27)
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
            on_release: 
                root.manager.current = 'receitapudim'
                root.manager.transition.direction = 'left'
                        
            FitImage:
                source: 'pudim.jpg'
                allow_stretch: True
                keep_ratio: False
                size_hint: 1, 1
                radius: 15
